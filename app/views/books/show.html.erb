<% if flash[:notice] %>
  <div class="flash" style="color: green;">
    <%= flash[:notice] %>
  </div>
<% end %>
<div class="row">
  <div class="col-xs-3">

    <%= render 'users/list', user: @user %>
    <%= render 'books/list', book: @book %>

  </div>
  <div class="col-xs-9">
    <h2>Book detail</h2>

    <table class="table table-hover table-inverse">
      <thead>
        <!-- <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th> -->
        </tr>
      </thead>

      <tbody>

        <tr>
          <td>
            <%= link_to user_path(@books.user.id) do %><%= attachment_image_tag @books.user, :image, :fill, 100, 100, format: 'jpeg', class: "attachment user profile_image fallback user_#{@books.user.id}", fallback: "no_image_icon.jpg" %><br><%= @books.user.name %><% end %>
            <br>
          </td>
          <td>
            <%= @books.book_title %>
          </td>
          <td>
            <%= @books.book_opinion %>
          </td>

          <% if @books.user.id == current_user.id %>

            <td>
              <%= link_to "Edit", edit_book_path(@books), class: "btn-sm btn-success edit_book_#{@books.id}" %>
            </td>

            <td>
                <%= link_to "Destroy", book_path(@books), method: :delete, class: "btn-sm btn-danger destroy_book_#{@books.id}","data-confirm" => "本当に削除しますか？" %>
            </td>

          <% end %>
        </tr>

      </tbody>
    </table>
  </div>
</div>
